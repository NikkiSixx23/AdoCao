<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageCaoItem"
        android:layout_width="102dp"
        android:layout_height="96dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/nomeCaoItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="112dp"
        android:fontFamily="@font/montserrat_alternates"
        android:text="Nome Do CÃ£o"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageCaoItem"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/porteCaoItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="114dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="145dp"
        android:fontFamily="@font/montserrat_alternates"
        android:text="Porte"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageCaoItem"
        app:layout_constraintTop_toBottomOf="@+id/nomeCaoItem" />

    <TextView
        android:id="@+id/sexoCaoItem"
        android:layout_width="37dp"
        android:layout_height="21dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="144dp"
        android:text="Sexo"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageCaoItem"
        app:layout_constraintTop_toBottomOf="@+id/porteCaoItem" />

</androidx.constraintlayout.widget.ConstraintLayout>